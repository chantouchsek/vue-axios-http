{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "dom"
    ],
    "esModuleInterop": true,
    "strict": false,
    "declaration": true,
    "outDir": "dist",
    "types": [
      "@types/node",
      "@nuxt/types",
      "@types/jest"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "coverage"]
}
